<configuration>
  <appender name="CSV" class="ch.qos.logback.core.FileAppender">
    <file>logs/tests.csv</file>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss},%level,%logger{36},%msg%n</pattern>
    </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="CSV" />
  </root>
</configuration>
